<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/assessmentRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Assessment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/assessmentTotalCost"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_weight="0.6"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/assessmentText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:text="@string/assesment"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/assessmentStar1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ic_star_border_black_24dp"
                    android:onClick="star1" />

                <Button
                    android:id="@+id/assessmentStar2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ic_star_border_black_24dp"
                    android:onClick="star2" />

                <Button
                    android:id="@+id/assessmentStar3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ic_star_border_black_24dp"
                    android:onClick="star3" />

                <Button
                    android:id="@+id/assessmentStar4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ic_star_border_black_24dp"
                    android:onClick="star4" />

                <Button
                    android:id="@+id/assessmentStar5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ic_star_border_black_24dp"
                    android:onClick="star5" />
            </LinearLayout>

            <TextView
                android:id="@+id/assessmentText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:text="@string/assessmentDescrioption"
                android:textColor="@color/browser_actions_title_color"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="saveAssessment"
            android:text="@string/save" />
    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>