<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDefault"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/assessmentText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/assesment"
            android:textColor="@color/colorAccent"
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/assessmentStar1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ic_star_black_24dp"
                android:onClick="star1" />

            <TextView
                android:id="@+id/assessmentStar2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ic_star_black_24dp"
                android:onClick="star2" />

            <TextView
                android:id="@+id/assessmentStar3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ic_star_black_24dp"
                android:onClick="star3" />

            <TextView
                android:id="@+id/assessmentStar4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ic_star_half_black_24dp"
                android:onClick="star4" />

            <TextView
                android:id="@+id/assessmentStar5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ic_star_border_black_24dp"
                android:onClick="star5" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:onClick="saveAssessment"
        android:text="@string/save"
        android:textColor="@color/colorWhite" />
</LinearLayout>